<h1>タスク登録フォーム</h1>

<%= render 'error' %>

<%= form_with model: @task, local: true do |form|%>
  <p>
    <%= form.label 'タスク名：' %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label 'タスクメモ：' %><br>
    <%= form.text_area :memo %>
  </p>
  <p>
    <%= form.label '状態：' %><br>
    <%= form.select :status,{'下書き'=>'draft','公開'=>'published','アーカイブ'=>'archieved'} %>
  </p>
  <%= form.submit '登録'%>
<% end%>

<%= link_to '一覧', tasks_path %>